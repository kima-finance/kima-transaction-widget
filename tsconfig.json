{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "Node",
    "jsx": "react-jsx",

    "rootDir": ".",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": false,

    "baseUrl": ".",
    "paths": {
      "@kima-widget/*": ["src/*"],

      "@kima-widget/shared/types": ["src/shared/types/index.ts"],
      "@kima-widget/shared/types/*": ["src/shared/types/*"],
      "@kima-widget/shared/lib/*": ["src/shared/lib/*"],
      "@kima-widget/shared/api/*": ["src/shared/api/*"],
      "@kima-widget/shared/crypto/*": ["src/shared/crypto/*"],
      "@kima-widget/shared/config/*": ["src/shared/config/*"],
      "@kima-widget/shared/plugins/*": ["src/shared/plugins/*"],
      "@kima-widget/shared/store/*": ["src/shared/store/*"],

      "@kima-widget/components/*": ["src/components/*"],
      "@kima-widget/widgets/*": ["src/widgets/*"],
      "@kima-widget/hooks/*": ["src/hooks/*"],
      "@kima-widget/services/*": ["src/services/*"],
      "@kima-widget/assets/*": ["src/assets/*"],
      "@kima-widget/app/*": ["src/app/*"],
      "@kima-widget/plugins/*": ["plugins/*"],
      "@kima-widget/pluginRegistry": ["src/pluginRegistry.ts"],
      "@kima-widget/styles": ["src/index.css"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "plugins/**/*.ts",
    "plugins/**/*.tsx"
, "src/shared/crypto/tron/tronweb.tsx"  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    ".turbo",
    ".vercel",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__snapshots__/**",
    "example-next/**",
    "example-vite/**"
  ]
}
